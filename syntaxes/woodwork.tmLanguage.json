{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "woodwork",
	"patterns": [
        {
            "name": "meta.block.yourlanguage",
            "begin": "\\{",
            "end": "\\}",
            "patterns": [
                {
                    "include": "#strings"
                },
				{
					"include": "#environment_variables"
				},
				{
					"name": "woodwork.key",
					"match": "(\\w+):",
					"captures": {
						"1": {
							"name": "variable.other"
						}
				}},
				{
					"name": "woodwork.variable.value",
					"match": ":\\s*(\\w+)",
					"captures": {
						"1": {
							"name": "variable.other"
						}
				}}
            ]
        },
		{
			"include": "#keyword1"
		},
		{
			"include": "#keyword2"
		},
		{
			"include": "#environment_variables"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#operators"
		}
    ],
	"repository": {
		"keyword1": {
			"patterns": [
				{
					"name": "woodwork.keyword1",
					"match": "=\\s*(\\w+)",
					"captures": {
						"1": {
							"name": "keyword.control"
						}
					}
				}
			]
		},
		"keyword2": {
			"patterns": [
				{
					"name": "entity.name.class",
					"match": "(?<=\\s)\\w+(?=\\s)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"variables": {
			"patterns": [{
				"name": "variable.other",
				"match": "(.*)(?=\\s*=)"
			},	{
				"name": "variable.other",
				"match": "\\w*\\s*(?=:)"
			}]
		},
		"environment_variables": {
			"patterns": [{
				"name": "support.constant.environment",
				"match": "$\\w+"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator",
				"match": ":"
			}]
		}
	},
	"scopeName": "source.woodwork"
}