{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "woodwork",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"match": "=\\s*(\\w+?)(?=\\s)\\s*(\\w+?)(?=\\s)",
				"captures": {
					"1": {
					  	"name": "keyword.control"
					},
					"2": {
						"name": "entity.name.class"
					}
				}
			}]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"variables": {
			"patterns": [{
				"name": "variable.other",
				"match": "(.*)(?=\\s*=)"
			},	{
				"name": "variable.other",
				"match": ".*\\s*(?=:)"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator",
				"match": ""
			}]
		}
	},
	"scopeName": "source.woodwork"
}